{
	"ezmlm": {
		"domainsPath": "/home/vpopmail/domains",
		"domain": "localhost"
	},
	"ezmlm-idx": {
		"binariesPath": "/usr/local/bin/ezmlm"
	},
	"system": {
		"grepBinary": "/bin/grep",
		"findBinary": "/usr/bin/find"
	},
	"authAdapter": "AuthTB",
	"adapters": {
		"AuthTB": {
			"AnnuaireURL": "https://localhost/service:annuaire:auth",
			"admins": [
				"john@mywebsite.org"
			]
		}
	},
	"settings": {
		"maxMessagesWithContentsReadableAtOnce": 100,
		"messageAbstractSize": 64
	},
	"cache": {
		"path": "/tmp/ezmlm-php"
	}
}
